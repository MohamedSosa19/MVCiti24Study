@model Course
@{
    ViewData["Title"] = "AddCourse";
    SelectList deptoption = new SelectList(ViewBag.DeptList,"Id","Name");
    SelectList courseoption = new SelectList(ViewBag.CrsResultsList);
}

<h1>AddCourse</h1>

<form method="post" asp-action="SaveCourse">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form form-control" value="@Model?.Name" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"> </span>
    </div>
    <div>
        <label class="col-form-label" asp-for="Degree"></label>
        <input class="form form-control" value="@Model?.Degree" asp-for="Degree" />
        <span asp-validation-for="Degree" class="text-danger"></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="MinDegree"></label>
        <input class="form form-control" value="@Model?.MinDegree" asp-for="MinDegree" />
        <span asp-validation-for="MinDegree" class="text-danger"></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="Hour"></label>
        <input class="form form-control" value="@Model?.Hour" asp-for="Hour" />
        <span asp-validation-for="Hour" class="text-danger"></span>
    </div>
 
    <div>
        <label class="col-form-label" asp-for="DepartmentId"></label>

        <select class="form form-control" asp-for="DepartmentId"
                asp-items="deptoption">
                <option selected disabled>--Select Department--</option>
        </select>
    </div>

    <div class="mt-3">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>

</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

